{
  "name": "hi18n",
  "version": "0.1.0",
  "description": "Stateless message catalog for internationalization",
  "main": "dist/index.js",
  "repository": "https://github.com/qnighy/hi18n",
  "author": "Masaki Hara <ackie.h.gmai@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.2.0",
  "bin": "./bin/hi18n.js",
  "scripts": {
    "babel": "babel -x .ts src -d dist --source-maps --ignore '**/*.test.ts,src/__fixtures__/**/*'",
    "build": "yarn babel && yarn tsc",
    "fmt": "prettier . -w",
    "fmt:check": "prettier . -c",
    "lint": "eslint 'src/**/*.ts' .eslintrc.js babel.config.js",
    "test": "jest",
    "tsc": "tsc --build"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@babel/runtime-corejs3": "^7.17.9",
    "@hi18n/eslint-plugin": "workspace:^0.1.0",
    "eslint": "^8.13.0",
    "glob": "^8.0.1",
    "resolve": "^1.22.0",
    "tslib": "^2.3.1",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.16.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/types": "^7.17.0",
    "@hi18n/core": "workspace:*",
    "@jest/globals": "^28.0.1",
    "@types/eslint": "^8.4.1",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/resolve": "^1.20.2",
    "@types/yargs": "^17.0.10",
    "babel-jest": "^28.0.1",
    "eslint-plugin-node": "^11.1.0",
    "expect": "^28.0.1",
    "fs-extra": "^10.1.0",
    "jest": "^28.0.1",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  }
}
