{
  "name": "@hi18n/react",
  "version": "0.1.0",
  "description": "Message internationalization meets immutability and type-safety - runtime for React",
  "keywords": ["intl", "i18n", "internationalization", "locale", "localization", "globalization", "format", "formatting", "translate", "translation", "hi18n", "react", "reactjs"],
  "homepage": "https://github.com/wantedly/hi18n#readme",
  "bugs": {
    "url": "https://github.com/wantedly/hi18n/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wantedly/hi18n.git",
    "directory": "packages/react"
  },
  "author": "Masaki Hara <ackie.h.gmai@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.2.0",
  "files": [
    "dist/**/*",
    "!dist/*.tsbuildinfo",
    "src/**/*",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "scripts": {
    "babel:cjs": "babel -x .ts,.tsx src -d dist --source-maps --ignore '**/*.d.ts,**/*.test.ts,**/*.test.tsx'",
    "babel:esm": "babel -x .ts,.tsx src -d dist --source-maps --ignore '**/*.d.ts,**/*.test.ts,**/*.test.tsx' --config-file ./babel-esm.config.js --out-file-extension .mjs",
    "build": "yarn babel:cjs && yarn babel:esm && yarn tsc",
    "fmt": "prettier . -w",
    "fmt:check": "prettier . -c",
    "lint": "eslint 'src/**/*.tsx' .eslintrc.js babel.config.js babel-esm.config.js",
    "test": "jest",
    "tsc": "tsc --build"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.17.9",
    "@hi18n/core": "workspace:^0.1.0"
  },
  "peerDependencies": {
    "react": "^17.0.2 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@jest/globals": "^28.0.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.2",
    "@types/testing-library__jest-dom": "^5.14.3",
    "babel-jest": "^28.0.1",
    "eslint": "^8.14.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "expect": "^28.0.1",
    "jest": "^28.0.1",
    "jest-environment-jsdom": "^28.0.1",
    "prettier": "^2.6.2",
    "react": "^17.0.2 || ^18.0.0",
    "react-dom": "^17.0.2 || ^18.0.0",
    "typescript": "^4.6.3"
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
